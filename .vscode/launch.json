{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug ACR",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/acr_exec",
      "cwd": "${workspaceFolder}/build",
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Ativar impressão de variáveis",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build"
    }
  ]
}
